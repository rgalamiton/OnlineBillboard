@{
    ViewData["Title"] = "Upload Image";
}

<h1> Upload Billboard Image</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Billboard" asp-action="Upload">
            <div class="form-group">
                <p>Upload Image here:</p>
                <input type="file" name="image" multiple />
            </div>

            <div class="form-group">
                <br />
                <input type="submit" value="Upload" />
            </div>
        </form>
    </div>

</div>