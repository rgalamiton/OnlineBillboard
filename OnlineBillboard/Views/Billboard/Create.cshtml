@model OnlineBillboard.Models.BillboardDetails
@{
    ViewData["Title"] = "Home Page";
}

<h1> Add Details</h1>
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-controller="Billboard" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="id" />
            </div>
            <div class="form-group">
                <label asp-for="title" class="control-label"> Title:</label>
                <input asp-for="title" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="location" class="control-label"> Location:</label>
                <input asp-for="location" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="events" class="control-label"> Event:</label>
                <input asp-for="events" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"> Description:</label><br />
                <textarea rows="4" asp-for="description" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="image" class="control-label"> Upload Image here:</label>
                <input type="file" asp-for="image" class="form-control" multiple />
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>

<br />
<a asp-action="Index" asp-controller="Billboard"> Go back to List </a>
